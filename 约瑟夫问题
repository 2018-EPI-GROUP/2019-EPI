#include<iostream>
#include<cstring>
#include<cstdio>
using namespace std;
int C[300]; 
int main()
{
   int n,m;
   scanf("%d%d",&n,&m);
   if(n==0 || m==0)return 0;
   for(int i=0;i<=n;i++)
     C[i]=i+1; 
   C[n]=1;
   int f=0;
   while(1)
   {
   	 if(f==C[f])
	 {
	   printf("%d",f); 
	   break;
	 } 
	 for(int i=1;i<m;i++)
   	   	f=C[f];
   	 int p=C[f];
   	 printf("%d ",p);
   	 C[f]=C[p];
   }
   return 0;
} 
