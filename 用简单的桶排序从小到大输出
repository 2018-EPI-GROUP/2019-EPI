#include <stdio.h> 
 
int main()
{
	//遍历初始化0-9的数组为0 
  
	int a[10],t,b,i,j;
	for(i=0;i<10;i++){
		a[i]=0; 
	}
	printf("请输入一个数\n"); 
	scanf("%d",&t);
	
	//计算出现了几次的数字
  
	while(t>10){
	b=t%10;
	t/=10;
	a[b]++;
	}
	a[t]++;
  
	/*/从小到大输出： 
	当元素大于零时输出位置名 输出一次元素--
	为零时输出下一位
	/*/
  
	for(i=0;i<10;i++){
  
  //遍历每一个元素位置名 
  
		while(a[i]>0){
    
  //输出 
    
			printf("%d",i);
			a[i]--;
		}
	}
	return 0;
}
