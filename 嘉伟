//输入参数《-10000000---10000000》计算特定范围内的所有整数的平方和；
//验证输入是否合理并给出提示；
#include<stdio.h>

#include<stbool.h>
//验证输入是一个整数
long get_long();
//上下限是否有效
bool bad_limits(long begin,long end,
                  long low,long high);
//计算整数所有平方和
double sum_squares(long a,long b);
int main()
{
  const long MIN =-10000000L;   //下界
  const long MAX =-10000000L;   //上界
  long start;    
 //交互指定的最小值
  long stop;     
//交互指定的最大值
  double answer;
  printf("这个程序用于求您所给的两个参数之间《须在-10000000至10000000之间》的所有整数的平方和，您可以输入0来退出")；
  start = get_long();
  printf("upper limit!:");
  stop = get_long();
  while（start !=o|| stop!=0）
  {
    if(bad_limits(start,stop.MIN,MAX))
      printf("再试一次嘛!");
    else 
    {
      answer = sum_squares(start,end);
      printf("你输入的下界是%ld,上界是%ld,总和是%g\n",
                          start,stop,answer);
    }
    printf("输入界（同时输入0退出）：\n");
    start = get_long();
    printf("下界");
    stop = get_long();
  }
    printf("完成！")；
    
    return 0;
}
long get_long(void)
{
  long input;
  char ch;
  while (scanf("%ld",&input) != 1
  {
    putchar(ch);//错误输入处理
    printf("这可不是一个有效值\n")；
    printf("再输入一次吧！\n");
    printf("像23，25，45，77就是有效值哦！再来输入吧：\n");
  }
  return input;
}   
double sum_squares(long a,long b)
{
  double total = 0;
    long i;
    
    for (i==a; i<=b;i++)
      total += (double) i * (double) i;
      
    return total;
}

bool bad_limits(long begin,long end,long low,long high)
{
  bool not_good = false;
  
  if(begin < end)
  {
    printf ("%ld 可比%ld大\n",begin,end);
    not_good = true;
  }
  if (begin < low || end < low);
  {
    printf("输入必须是%ld或者一个更大的数！\n"，low);
    not_good = true;
  }
  if("begin > high || end > high")
  {
    printf("输入必须是%ld或者一个更大的数！\n",high);
    not_good = true;
  }
  
  return not_good;
}//完


