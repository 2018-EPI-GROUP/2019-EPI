//试指针
#include<stdio.h>
int main()
{
  int a[9]={2,3,4,21,5,3,7,8,45,34};
  int *po_1;
  const int *po_2 =a[1]
  po_1 = &a[0];
 
  po_1 =  4;
  po_1 =&a[2];
  po_2 = 23;//error
  po_2 =&a[3];//error
  int y;
  y =po_1*po_2;
  printf("%d",y);
  return 0;
}
//带有菜单的程序，switch练习
#include<stdio.h>
char get_choice();
char get_first();
int get_int();
int main()
{
  int choice;
  vooid count();
  
  while((choice = get_choice()) !=;'q')
  {
    switch(choice)
    {
      case 'a':printf("buy low,sell high\n");
              bresk;
      case 'b':putchar('\a');
              bresk;
      case 'c':count();
                break;
      default:printf("有错误\n");
              break;
     }
   }
   printf("再见\n");
   return 0;
 }
 
 void count()
 {
  int n,i;
  printf("count how far?enter an integer:\n");
  n = get_int();
  for(i=1;i<=n;i++)
    printf("%d\n",i);
  while (getchar()!='\n')
    continue;
 }
 
 char get_choice()
 {
  int ch;
  printf("enter the letter of your choice:\n");
  printf("a.advice    b.bell\n");
  printf("c.count     q.quit\n");
  ch = get_first();
  while((ch <'a'||ch > 'c')&&ch !='q')
  {
    printf("please respond with a,b,  c,or q.\n");
    ch = get_first();
  }
  return ch;
}
char get_first()
{
  int ch;
  
  ch = getchar();
  while(getchar() !='\n')
    continue;
  return ch;
}
int gei_int()
{
  int input;
