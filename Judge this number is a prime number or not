#include <stdio.h>
int main()
{       int i,num;
        _Bool flag = 1;
        printf("Input a number:");
        scanf("%d",&NUM);
        for(i = 2 ; i < num / 2 ; i++ )
        {      if( num %i == 0)
               {
                   flag = 0;
               }
        }
        if(flag)
        {
             printf("%d is a prime number\n",num);
        }
        else
        {
             printf("%d is not a prime number\n",num);
        }
        return 0;
}
