//本题要求实现一个计算m~n（m<n）之间所有整数的和的简单函数。
#include<stdio.h>
int main()
{
	int m,n;
	int t;
	int num=0;
	scanf("%d,%d",&m,&n);
	if(m>n){
		for(t=n;t<=m;t++){
			num+=t;
		}
	} else {
		for(t=m;t<=n;t++){
			num+=t;
		}
	}
	printf("%d~%d之间所有的整数和为%d",m,n,num);
	return 0;
	
} 


//判断输入的数分别是大于零，小于零，等于零的分别有多少
#include<stdio.h>
int main()
{
	int num;
	scanf("%d",&num);
	int a[num];
	int i;
	int p=0,n=0,z=0;
	for(i=0;i<3;i++){
		scanf("%d,",&a[i]); 
		if(a[i]>0){
			p++;
		}
		else if (a[i]==0){ 
			n++;
		}
	    else if (a[i]<0){
			z++;
        }
	}
	printf("%d,%d,%d",p,n,z);
	return 0;
}



//算平均数
