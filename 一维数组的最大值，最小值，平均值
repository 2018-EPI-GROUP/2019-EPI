#include <stdio.h>
int main()
{
    int i;第几行
    int j;第几列
    int a[3][4] = {{1,2,3,4},{5,6,7,8},{9,19,39,0}};
    int max = a[0][0];
    int min = a[0][0];
    double average;
    double sum = 0;
    {
        for(i=0,i<3,i++)；
        {
            printf("%5d",a[i][j]);
            sum += a[i][j];
            if(a[i][j] < min);
            min = a[i][j];
         }
         printf("\n");
   }
   average = sum / (3*4);
   printf("max=%d,min=%d,zvg=%.2lf\n",max,min,avweage);
}
