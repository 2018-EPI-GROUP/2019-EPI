int main()
{
	char c1,c2;
	c1=97;
	c2=98;
	printf("c1=%c,c2=%c\n",c1,c2);
	printf("c1=%d,c2=%d\n",c1,c2);
	return 0;
}
//scanf的使用 
#include<stdio.h>
int main()
{
	int a,b;
	float x,y;
	char c1,c2;
	scanf("a=%db=%d",&a,&b);
	printf("a=%db=%d",a,b);
	scanf("%f%e",&x,&y);
	printf("%f%e",x,y);
	scanf("%c%c",&c1,&c2);
	printf("%c%c",c1,c2);
	return 0;
}
//字符的运算与输出 
#include<stdio.h>
int main()
{
	char c1,c2,c3,c4,c5;
	c1='C';
	c2='h';
	c3='i';
	c4='n';
	c5='a';
	printf("%c%c%c%c%c",c1,c2,c3,c4,c5);
	c1=c1+4;
	c2=c2+4;
	c3=c3+4;
	c4=c4+4;
	c5=c5+4;
	printf("%c%c%c%c%c",c1,c2,c3,c4,c5);
	putchar(c1);
	return 0;
}
//圆的半径r=1.5,圆柱高h=3,求圆周长，圆面积，圆球表面积，圆球体积，圆柱体积 
#include<stdio.h>
#define PI 3.1415 
int main()
{
	float r=1.5,h=3;
	printf("圆周长%f\n",2*PI*r); 
	printf("圆面积%f\n",PI*r*r);
	printf("圆球表面积%f\n",4*PI*r*r);
	printf("圆球体积%f\n",4/3*PI*r*r*r);
	printf("圆柱体积%f\n",PI*r*r*h);
	return 0;
}
// int,char,getchar区分与使用 
#include<stdio.h>
