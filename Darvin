/*假如我国国民生产总值的年增长率为9%，计算10年后我国国民生产总值与现在相比
增长多少百分比。 计算公式p=(1+r)^n */
#include<stdio.h>
#include<math.h>
int main()
{
	int n;
	double p,q;
	p=1;
	q=0.09;
	for(n=1;n<=10;n++)
	p=p*(1+q);
	p=(p-1)*100;
	printf("增长了%f%%",p);
	return 0;
} 
/*利息的计算，一年定期4.14%，二年定期4.68%，三年定期5.4%，五年定期5.85%，活期0.72%（一季度结算一次） 
一5，二23，三32，四11111，五0*4*5*/ 
#include<stdio.h>
int main()
{
	int n;
	double a,b,c,d,e;
	a=b=c=d=e=1;
	double yi(double x);
	double er(double x);
	double san(double x);
	double wu(double x);
	double huo(double x);
	for(n=1;n<=5;n++) a=wu(a);
	b=san(er(b));
	c=er(san(c));
	for(n=1;n<=5;n++) d=yi(d);
	for(n=1;n<=20;n++) e=huo(e);
	printf("方案一收益为%f\n",(a-1)*1000);
	printf("方案二收益为%f\n",(b-1)*1000);
	printf("方案三收益为%f\n",(c-1)*1000);
	printf("方案四收益为%f\n",(d-1)*1000);
	printf("方案五收益为%f\n",(e-1)*1000);
}
double yi(double x)  //一年定期的利息 
{
	x=x*1.0414; 
	return(x);
} 
double er(double x)
{
	x=x*1.0468;
	return(x);
}
double san(double x)
{
	x=x*1.054;
	return(x);
}
double wu(double x)
{
	x=x*1.0585;
	return(x);
}
double huo(double x)
{
	x=x*1.0072;
	return(x);
}
