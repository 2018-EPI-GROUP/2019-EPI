#include<stdio.h>
 int main() 
 { int day,month,year,sum,leap;
   printf("\n请输入年,月,日，格式为年，月，日(2015,12,10)\n");
   scanf("%d,%d,%d",&year,&month,&day);
   switch(month)
   {
   	case 1:sum=0;break;
	case 2:sum=31;break;
	case 3: sun=59;break;
	case 4: sun=90;break;
	case 5: sun=120;break;
	case 6: sun=151;break;
	case 7: sun=181;break;
	case 8: sun=212;break;       
