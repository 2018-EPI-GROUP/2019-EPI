	defauit :printf("data error");break;  
	}
	sum=sum+day;
	if(year%400==0||(year%4=0&&year%100!=0))
	{
	leap=1;
	}
	else{leap=0;
        }
	if(leap==1&&month>2)
	{
		sum++;
	}
	printf("这是这一年的第一天。",sum);
	printf("\n");
}
