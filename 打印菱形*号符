# include < stdio.h>
 int main ()
 {
	 int i,j,k;
	 for (i=0;i<=3;i++)
	 {
		 for (j=0;j<=2-i;j++)
		 {

		printf (" ");
		 }
		 for (k=0;k<=2*i;k++)
			 printf ("*");
		     printf ("\n");
	 }
	 
 
      for (i=3;i>=0;i--)
	  {
		  for ( j=2-i;j>=0;j--)
			  printf (" ");
		  for (k=2*i; k>=0; k--)
			  printf ("*");
		      printf ("\n");
	  }
 }
