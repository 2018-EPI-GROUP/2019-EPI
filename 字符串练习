#include<stdio.h>
#include<stdlib.h>
char main()
{
	char a[] = "nichousha\nchounizadi\nbufulaizhan\ndagewocuole\nguawazi";
	
	char *p = strtok(a,"\n");
	
	while(*p){
		printf("%s\n",p);
		p = strtok(NULL,"\n");
	}
}
