#include<stdio.h>

int main()
{
	int a[3]={1,2,3},b,c;
	int *i,*j;
	for(c=0;c<2;c++){
		for(b=0;b<2;b++){
			if(a[b]<a[b+1]){
				i = &a[b];
				j = &a[b+1];
				int m = *i;
				*i = *j;
				*j = m;
			}
		}
	}
	for(b=0;b<3;b++){
		printf("%2d",a[b]);
	}
}

//加上函数
#include<stdio.h>

void temp(int *i,int *j);
int main()
{
	int a[3]={1,2,3},b,c;
	int *i,*j;
	for(c=0;c<2;c++){
		for(b=0;b<2;b++){
			if(a[b]<a[b+1]){
				i = &a[b];
				j = &a[b+1];
				temp(i,j);
			}
		}
	}
	for(b=0;b<3;b++){
		printf("%2d",a[b]);
	}
}

void temp(int *i,int *j)
{
	int m = *i;
	*i = *j;
	*j = m;	
}

//倒数
#include<stdio.h>

void temp(int *i,int *j);
int main()
{
	int i,a[5]={1,2,3,4,5};
	for(i=0;i<2;i++){
		temp(&a[i],&a[i+2*(2-i)]);
	}
	for(i=0;i<5;i++){
		printf("%d",a[i]);
	}
}

void temp(int *i,int *j)
{
	int m;
	m = *i;
	*i = *j;
	*j = m;
}

